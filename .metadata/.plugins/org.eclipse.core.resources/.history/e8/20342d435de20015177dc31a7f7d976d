package hr.pfs.graphics;

public class MapPixel {
	
	private int color;
	private int data;
	
	public MapPixel (int color, int data) {
		this.color = color;
		this.data = data;
	}
	
	public int getBottom() {
		return color;
	}
	
	public int getTop() {
		//ff xx xx xx  = botom layer
		//00 xx xx xx  = top layer
		
		if (data & 0xff0000 == 0) {
			
		}
	}

	public int getData() {
		return data;
	}
}
