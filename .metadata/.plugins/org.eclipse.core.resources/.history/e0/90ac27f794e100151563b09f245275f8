package hr.pfs.game.main;

public class Global {

	public enum STATE {
		GAME, 
		PAUSE,
		HALT,
		BATTLE
	}
	
	//Main graphics settings	
	public static final double RATIO = 9./16.;					// height to width ratio
	public static final int WIDTH = 500;
	public static final int HEIGHT = (int) (WIDTH * RATIO);
	public static final int SCALE = 3;							// scale the initial size
	public static final int UPS = 200;							// updates per second
	public static final int SPEED = 1;							// default ups multiplier
	
	public static int  scaledWidth = WIDTH*SCALE;
	public static int scaledHeight = HEIGHT*SCALE;
	
	public static final int BASE = 30;							// movement base
	
	//Game state
	public static STATE state = STATE.GAME;
	
	//Initial position
	public static int xOffset = BASE*SCALE*20;
	public static int yOffset = BASE*SCALE*4;
	
}
